<!--
 * 
 * cron: 			cronentries
 * Author:			Sevan Gregorian and Carrick Bartle
 * Date Created:	        04-1-2016
 * 
 * dailyemails:                 Alert pattern starting every day at 11:30 until all emails are sent that day.
 * 
 * retry:                       Every 10 minutes, if a reminder job has failed, it retries 5 times in 2.5 second intervals.
 *                              If a job cannot be completed, it skips to the next task.
 *                           
-->
<cronentries>
	
	 <cron>
	    <url>/dailyemails</url>
	    <description>Mail out each day's release date reminders</description>
	    <schedule>every day 11:30</schedule>
	</cron>
	
	<cron>
    	<url>/retry</url>
    	<description>Retry on jsdk</description>
	    <schedule>every 10 minutes</schedule>
	    <retry-parameters>
	      <min-backoff-seconds>2.5</min-backoff-seconds>
	      <max-doublings>5</max-doublings>
	    </retry-parameters>
  	</cron>
</cronentries>
